---
interface Props {
  variant?: string;
  className?: string;
}

const { variant = "default", className = "" } = Astro.props;
---

<span
  class={`inline-block rounded-full px-4 py-2 text-sm font-semibold ${className} ${
    variant === "secondary"
      ? "bg-gray-200 text-gray-800"
      : "bg-blue-500 text-white"
  }`}
>
  <slot />
</span>
