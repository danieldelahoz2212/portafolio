---
interface Project {
  id: number;
  icon?: string;
  title: string;
  description: string;
  image: string;
  githubLink?: string;
  moreInfoLink?: string;
}

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-1 gap-6">
  {
    projects.map((project, idx) => (
      <div class="bg-white rounded-lg shadow-lg border p-6 group relative overflow-hidden animate-fade-up hover:animate-pulse transition-all duration-500 hover:shadow-2xl hover:-translate-y-2 hover:scale-105">
        <div class="absolute inset-0 bg-gradient-to-br from-blue-100/40 to-purple-100/30 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none z-0"></div>
        <div class="mb-4 relative z-10 animate-fade-in-down">
          <h3 class="text-xl font-bold text-gray-800 animate-fade-in-down delay-100">{project.title}</h3>
          <p class="text-gray-600 animate-fade-in-up delay-200">{project.description}</p>
        </div>
        <div class="mb-4 relative z-10 animate-fade-in-up delay-300">
          <img
            src={project.image}
            alt={`Imagen del proyecto ${project.title}`}
            class="rounded-md w-full h-48 object-cover mb-4 shadow-md group-hover:scale-105 transition-transform duration-500"
          />
        </div>
        <div class="flex justify-between items-center relative z-10 animate-fade-in-up delay-400">
          <a
            href={project.moreInfoLink}
            target="_blank"
            rel="noopener noreferrer"
            class="bg-gradient-to-r from-blue-500 to-purple-500 text-white font-semibold rounded-lg text-lg px-4 py-2 hover:from-purple-500 hover:to-blue-500 hover:scale-105 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-300"
          >
            Ver m√°s
          </a>
          <a
            href={project.githubLink}
            target="_blank"
            rel="noopener noreferrer"
            class="bg-black text-white font-semibold rounded-lg text-lg px-4 py-2 hover:bg-gray-700 hover:scale-110 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-gray-300"
          >
            {project.icon && <i data-lucide={project.icon} class="h-6" />}
          </a>
        </div>
      </div>
    ))
  }
</div>
