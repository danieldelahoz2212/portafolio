---
import Button from './Button.astro';
interface Project {
  id: number;
  title: string;
  description: string;
  image: string;
  githubLink?: string;
  moreInfoLink?: string;
}

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols3 gap-6">
  {
    projects.map((project) => (
      <div class="bg-white rounded-lg shadow-md border p-4">
        <div class="mb-4">
          <h3 class="text-xl font-bold">{project.title}</h3>
          <p class="text-gray-600">{project.description}</p>
        </div>
        <div class="mb-4">
          <img
            src={project.image}
            alt={`Imagen del proyecto ${project.title}`}
            class="rounded-md w-full"
          />
        </div>
        <div class="flex justidy-between">
          <a
            href={project.moreInfoLink}
            class="border border-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-gray-100"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="h-5 w-5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M12 4.5v15m7.5-7.5h-15"
              />
              </svg>
          </a>

        </div>
      </div>
    ))
  }
</div>
